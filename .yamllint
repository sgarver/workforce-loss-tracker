extends: default

rules:
  line-length:
    max: 120
  indentation:
    spaces: 2
    indent-sequences: false
    check-multi-line-strings: false
  brackets:
    forbid: false
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
    check-keys: false
  document-start: disable
  new-line-at-end-of-file: enable